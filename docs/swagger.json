{
  "openapi": "3.0.4",
  "info": {
    "title": "LockProviderApi, Version=1.3.0.0, Culture=neutral, PublicKeyToken=null",
    "version": "1.0"
  },
  "paths": {
    "/status": {
      "get": {
        "tags": [
          "Lock"
        ],
        "summary": "Gets the current status of the server",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/islocked": {
      "get": {
        "tags": [
          "Lock"
        ],
        "summary": "Check if a specific lock is acquired.\r\nOwner and name must match exactly.",
        "parameters": [
          {
            "name": "owner",
            "in": "query",
            "description": "The lock owner",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "The lock name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              }
            }
          }
        }
      }
    },
    "/list": {
      "get": {
        "tags": [
          "Lock"
        ],
        "summary": "List acquired locks.\r\nThe owner must match exactly.\r\nThe name is a regex to filter locks.",
        "parameters": [
          {
            "name": "owner",
            "in": "query",
            "description": "The lock owner",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "The lock name regex",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/acquire": {
      "post": {
        "tags": [
          "Lock"
        ],
        "summary": "Acquire a lock",
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AcquireRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AcquireRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AcquireRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              }
            }
          }
        }
      }
    },
    "/release": {
      "delete": {
        "tags": [
          "Lock"
        ],
        "summary": "Release a lock.\r\nOwner and name must match exactly.",
        "parameters": [
          {
            "name": "owner",
            "in": "query",
            "description": "The lock owner",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "The lock name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LockResponse"
                }
              }
            }
          }
        }
      }
    },
    "/releasemany": {
      "delete": {
        "tags": [
          "Lock"
        ],
        "summary": "Release multiple locks.\r\nThe owner must match exactly.\r\nThe name is a regex to filter locks.",
        "parameters": [
          {
            "name": "owner",
            "in": "query",
            "description": "The lock owner",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "The lock name regex",
            "schema": {
              "type": "string"
            }
          }
