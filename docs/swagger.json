        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LocksListResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AcquireRequest": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "The lock owner",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "The lock name",
            "nullable": true
          },
          "timeout": {
            "type": "integer",
            "description": "The maximum number of seconds to wait for the lock",
            "format": "int32"
          },
          "timeToLive": {
            "type": "integer",
            "description": "The lock time to live",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "LockInfo": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "The lock owner",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "The lock name",
            "nullable": true
          },
          "acquiredAt": {
            "type": "string",
            "description": "The UTC time the lock was acquired",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "LockResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "boolean",
            "description": "The operation result"
          },
          "timeStamp": {
            "type": "string",
            "description": "The current UTC time",
            "format": "date-time"
          },
          "error": {
            "type": "string",
            "description": "Optional error message",
            "nullable": true
          },
          "owner": {
            "type": "string",
            "description": "The lock owner",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "The lock name",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LocksListResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "boolean",
            "description": "The operation result"
          },
          "timeStamp": {
            "type": "string",
            "description": "The current UTC time",
            "format": "date-time"
          },
          "error": {
            "type": "string",
            "description": "Optional error message",
            "nullable": true
          },
          "owner": {
            "type": "string",
            "description": "The lock owner",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "The lock name",
            "nullable": true
          },
          "locks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LockInfo"
            },
            "description": "The list of locks",
            "nullable": true
          },
          "count": {
            "type": "integer",
            "description": "The number of locks",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "StatusResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "boolean",
            "description": "The operation result"
          },
          "timeStamp": {
            "type": "string",
            "description": "The current UTC time",
            "format": "date-time"
          },
          "error": {
            "type": "string",
            "description": "Optional error message",
            "nullable": true
          },
          "serverVersion": {
            "type": "string",
            "nullable": true
          },
          "uptime": {
            "type": "string",
            "format": "date-span"
          },
          "locks": {
            "type": "integer",
            "format": "int32"
          },
          "waitingLocks": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Lock"
    }
  ]
}